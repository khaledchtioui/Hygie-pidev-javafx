<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.gui.EditArticleFormController">


<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label fx:id="editLabel" text="Edit Article" />
        <AnchorPane>
            <VBox alignment="TOP_LEFT" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <children>
                    <HBox spacing="10.0">
                        <Label text="Title" />
                        <TextField fx:id="titreField" />
                    </HBox>
                    <HBox spacing="10.0">
                        <Label text="Category" />
                        <TextField fx:id="categorieField" />
                    </HBox>
                    <HBox spacing="10.0">
                        <Label text="Description" />
                        <TextField fx:id="descriptionField"  prefHeight="65.0" prefWidth="300.0"  />
                    </HBox>

                    <HBox spacing="10.0">
                        <Label text="Image URL" />
                        <TextField fx:id="imageField" />
                    </HBox>
                    <HBox spacing="10.0">
                        <Label text="Status" />
                        <TextField fx:id="statusField" />
                    </HBox>
                </children>
            </VBox>
        </AnchorPane>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="saveButton" onAction="#saveEdit" text="Save" />
            <Button fx:id="cancelButton" onAction="#cancelEdit" text="Cancel" />
        </HBox>
    </children>
</VBox>

</AnchorPane>