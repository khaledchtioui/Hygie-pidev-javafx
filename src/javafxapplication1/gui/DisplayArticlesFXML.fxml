<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1300.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.gui.DisplayArticlesFXMLController">
    <children>
        <!-- Add Article button -->
        <Button layoutX="25.0" layoutY="25.0" minWidth="100" minHeight="40" text="Add Article" mnemonicParsing="false" onAction="#ouvrirAjouterArticle"  />

        <!-- Table View -->
        <TableView fx:id="articleTable" layoutX="25.0" layoutY="75.0" prefWidth="1250.0" prefHeight="500.0">
            <columns>
                <!-- Titre column -->
                <TableColumn fx:id="colTitre" prefWidth="150.0" text="Titre" />

                <!-- Categorie column -->
                <TableColumn fx:id="colCategorie" prefWidth="150.0" text="Catégorie" />

                <!-- Description column -->
                <TableColumn fx:id="colDescription" prefWidth="330.0" text="Description" />

                <!-- Date de création column -->
                <TableColumn fx:id="colDateCreation" prefWidth="150.0" text="Date de création" />

                <!-- Image column -->
                <TableColumn fx:id="colImage" prefWidth="100.0" text="Image" />

                <!-- Status column -->
                <TableColumn fx:id="colStatus" prefWidth="70.0" text="Status" />

                <!-- Info column -->
                <TableColumn fx:id="colInfo" prefWidth="80.0" text="Info" style="-fx-background-color: #9fc5e8;" />

                <!-- Edit column -->
                <TableColumn fx:id="colEdit" prefWidth="80.0" text="Edit" style="-fx-background-color: orange;" />

                <!-- Delete column -->
                <TableColumn fx:id="colDelete" prefWidth="80.0" text="Delete" style="-fx-background-color: red;" />
            </columns>
        </TableView>

        <!-- Error Label -->
        <Label fx:id="Listabel" layoutX="250.0" layoutY="585.0" prefWidth="600.0" textFill="red" />

        <!-- Refresh Button -->
        <Button layoutX="1175.0" layoutY="25.0" minWidth="100" minHeight="40" text="Refresh" onAction="#Afficher" textFill="#5122eb" />
    </children>
</AnchorPane>
