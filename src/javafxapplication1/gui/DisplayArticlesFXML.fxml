<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1300.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="javafxapplication1.gui.DisplayArticlesFXMLController">
    <children>
       
       <Label layoutX="619.0" layoutY="32.0" text="Filter by Category" AnchorPane.leftAnchor="619.0" AnchorPane.topAnchor="32.0" />
        <ComboBox fx:id="categorieComboBox" layoutX="758.0" layoutY="23.0" prefHeight="40.0" prefWidth="150.0" AnchorPane.leftAnchor="758.0" AnchorPane.topAnchor="23.0" />

      

       <!-- Add Article button -->
        <Button layoutX="25.0" layoutY="25.0" minHeight="40" minWidth="100" mnemonicParsing="false" onAction="#ouvrirAjouterArticle" text="Add Article" />

        <!-- Search field -->
        <TextField fx:id="searchField" layoutX="179.0" layoutY="28.0" prefHeight="40.0" prefWidth="200.0" promptText="Search" />

        <!-- Search button -->
        <Button fx:id="searchButton" layoutX="419.0" layoutY="26.0" minHeight="30" minWidth="80" onAction="#rechercher" prefHeight="40.0" prefWidth="115.0" text="Search" />


        <!-- Table View -->
        <TableView fx:id="articleTable" layoutX="25.0" layoutY="75.0" prefHeight="500.0" prefWidth="1400.0">
            <columns>
                
                <!-- Titre column -->
                <TableColumn fx:id="colTitre" prefWidth="150.0" text="Titre" />

                <!-- Categorie column -->
                <TableColumn fx:id="colCategorie" prefWidth="150.0" text="Catégorie" />

                <!-- Description column -->
                <TableColumn fx:id="colDescription" prefWidth="330.0" text="Description" />

                <!-- Date de création column -->
                <TableColumn fx:id="colDateCreation" prefWidth="150.0" text="Date de création" />

                <!-- Image column -->
                <TableColumn fx:id="colImage" prefWidth="100.0" text="Image" />

                <!-- Status column -->
                <TableColumn fx:id="colStatus" prefWidth="70.0" text="Status" />
                
                
                        <!-- QR Code column -->
                        <TableColumn fx:id="colQRCode" prefWidth="200.0" text="QR Code" />

                <!-- Info column -->
                <TableColumn fx:id="colInfo" prefWidth="80.0" text="Info" />

                <!-- Edit column -->
                <TableColumn fx:id="colEdit" prefWidth="80.0" text="Edit" />

                <!-- Delete column -->
                <TableColumn fx:id="colDelete" prefWidth="80.0" text="Delete" />
            </columns>
        </TableView>

        <!-- Error Label -->
        <Label fx:id="Listabel" layoutX="250.0" layoutY="585.0" prefWidth="600.0" textFill="red" />

        <!-- Refresh Button -->
        <Button layoutX="1160.0" layoutY="25.0" minHeight="40" minWidth="100" onAction="#Afficher" prefHeight="40.0" prefWidth="115.0" text="Refresh" textFill="#5122eb" />
    </children>
</AnchorPane>
